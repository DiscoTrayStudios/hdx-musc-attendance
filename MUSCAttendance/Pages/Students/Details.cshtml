@page
@model MUSCAttendance.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div>
<h1>@Html.DisplayFor(model => model.Student.FullName)</h1>


<h4>Progress</h4>
<dl >
        <dt >
            Total Attendances
        </dt>
        <dd >
            @Html.DisplayFor(model => model.Student.Forms.Count)
        </dd>
        <dt >
            Hendrix events
        </dt>
        <dd >
            0
        </dd>
        <dt >
            UCA events
        </dt>
        <dd >
            0
        </dd>
        <dt >
            Other events
        </dt>
        <dd >
            0
        </dd>
    </dl>
</div>

<hr>

<div>
    <h4>Attendances</h4>

    
      <table class="table">
    <thead>
        <tr>
            <th>Event Date</th>
            <th>Event Location</th>
            <th>Performed</th>
            <th>Program?</th>
            <th>OtherDescription</th>
            <th>Description</th>
            <th>Approved</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student.Forms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasProgram)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.OtherDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramDescription)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="../Forms/Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="../Forms/Delete" asp-route-id="@item.ID">Delete</a>
                @if (!item.Approved)
                    {
                        <form method="post">
                            <button type="submit"  class="btn btn-primary">Approve</button>
                        </form>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>