@page
@model MUSCAttendance.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div>
<h1>@Html.DisplayFor(model => model.Student.FullName)</h1>


<h4>Progress</h4>
<dl >
        <dt >
            Total Attendances
        </dt>
        <dd >
            @Html.DisplayFor(model => model.Student.Forms.Count)
        </dd>
        <dt >
            Hendrix events
        </dt>
        <dd >
            0
        </dd>
        <dt >
            UCA events
        </dt>
        <dd >
            0
        </dd>
        <dt >
            Other events
        </dt>
        <dd >
            0
        </dd>
    </dl>
</div>

<hr>

<div>
    <h4>Attendances</h4>

    
      <table class="table">
    <thead>
        <tr>
            <th>Event Date</th>
            <th>Event Location</th>
            <th>Performed</th>
            <th>Program?</th>
            <th>OtherDescription</th>
            <th>Description</th>
            <th>Approved</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student.Forms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasProgram)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.OtherDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramDescription)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="../Forms/Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="../Forms/Delete" asp-route-id="@item.ID">Delete</a>
                @if (!item.Approved)
                {
                    <form id="approveForm-@item.ID" method="post">
                        <input type="hidden" name="id" value="@item.ID" />
                        <a href="#" class="btn btn-primary" onclick="approveItem('@item.ID')">Approve</a>
                    </form>
                }

            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<script>
    function approveItem(itemId) {
        // Make an AJAX request to your controller method
        $.ajax({
            type: "POST",
            url: "/Students/Details/OnPostAsync",
            data: { id: itemId },
            success: function (data) {
                // Handle success if needed
                console.log("Item approved successfully");
                
                // If you want to redirect after approval, you can use window.location
                // window.location.href = "/Students/Details?id=" + itemId;
            },
            error: function () {
                // Handle error if needed
                console.log("Error approving item");
            }
        });
    }
</script>

